<ul class="nav nav-tabs">
  <% @sections.each do |section| %>
      <li class="nav-item">
        <a class="nav-link <%= section.id == 1? 'active': ''%>" data-toggle="tab" href="#section_<%= section.id %>"><%= section.name %></a>
      </li>
  <% end %>
</ul>
<div class="tab-content">
  <% @sections.each do |section| %>
      <div id="section_<%= section.id %>" class="tab-pane <%= section.id == 1? 'active': ''%>">
        <%= form_for [@section] %>
        <!--<h3> link_to section.name, section_path(section) %></h3>-->

        <!--<div class="grid" data-masonry='{ "itemSelector": ".grid-item", "columnWidth": 350 }'>-->
          <% count = 1 %>
          <% section.foods.each do |food| %>
              <% if count=1 %>
                  <div class="grid">
              <% end %>
              <div class="grid-item col-md-4">
              <% if food.picture && food.picture!='' %>
                  <%= image_tag(food.picture, class: "card-img-top", width: "300", height: "300") %>
              <% else %>
                  <%= image_tag("http://lorempixel.com/200/200/", class: "card-img-top", width: "300", height: "300") %>
              <% end %>
              <div class="card-block">
                <h4 class="card-title"><%= food.name %> <%= food.section.name %></h4>
                <p class="card-text"><%= food.description %></p>
                <a href="#" class="btn btn-primary">Button</a>
              </div>
            </div>
              <% if count==1 %>

                  </div>
                  <% else if count == 3%>
                      <% count = 1 %>
              <% end %>
                  <% count = count+1 %>
          <% end %>
        <% end %>
       <!-- </div>-->
      </div>
  <% end %>
</div>
